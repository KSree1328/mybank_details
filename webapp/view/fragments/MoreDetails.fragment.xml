<core:FragmentDefinition xmlns:core="sap.ui.core"
    xmlns="sap.m">

    <Dialog id="moreBankDetails" title="Confidential Details">

        <VBox id="vBox1" binding="{oBankDetails>/accountDetails}" class="sapUiSmallMargin">
            <!-- <Title text="Account Details" id="accDetails" level="H1"/> -->

            <HBox id="hBox1">
                <Label id="bankAccNum" text="{i18n>accNum}" class="sapUiSmallMarginEnd"/>
                <Text id="accountNum" text="{oBankDetails>accountNum}"/>
            </HBox>

            <HBox id="hBox2">
                <Label id="lblAcHolderNameID" text="{i18n>accName}" class="sapUiSmallMarginEnd"/>
                <Text id="idAcHolderNameValue" text="{oBankDetails>Name}"/>
            </HBox>

            <HBox id="hBox3">
                <Label id="lblIFSCId" text="{i18n>isfcode}" class="sapUiSmallMarginEnd"/>
                <Text id="idIFSCValue" text="{oBankDetails>Isfc}"/>
            </HBox>

            <HBox id="hBox4">
                <Label id="lblCustId" text="{i18n>custID}" class="sapUiSmallMarginEnd"/>
                <Text id="idCustValue" text="{oBankDetails>customerid}"/>
            </HBox>

            <!-- <HBox id="hBox5">
            <Label id="lblAddressId" text="{i18n>add}" class="sapUiSmallMarginEnd"/>
            <Text id="idAddressValue" text="{oBankDetails>/address/housenumber}, {address/street}, {address/city},
            {address/state}, {address/country}"/>
        </HBox> -->
            <HBox id="hBox5">
                <Label id="lblAddressId" text="{i18n>address}" class="sapUiSmallMarginEnd"/>
                <Text id="idAddressValue" text="{oBankDetails>address/housenumber}, {oBankDetails>address/street},
                {oBankDetails>address/city}
                {oBankDetails>address/state}, {oBankDetails>address/country}, {oBankDetails>address/postalcode}"/>
            </HBox>
        </VBox>


        <beginButton>
            <Button id="closeBtn" type="Reject" text="Close" press=".onCloseBankDetails"></Button>
        </beginButton>
    </Dialog>

</core:FragmentDefinition>